{
  "title": "Combo Templatesã€€by Leo",
  "rules": [
    {
      "description": "Combo: Switch to English input with X + C",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "x"
              },
              {
                "key_code": "c"
              }
            ],
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            }
          ]
        }
      ]
    },
    {
      "description": "Combo: Switch to Kana input with , + .",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "comma"
              },
              {
                "key_code": "period"
              }
            ],
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "japanese_kana"
            }
          ]
        }
      ]
    }
  ]
}
